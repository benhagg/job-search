
# Example env file for the job-search project.
# Copy this file to `.env` and populate secrets / keys before running locally.

# Postgres connection (DSN or individual parts)
POSTGRES_DSN=postgresql://postgres:example@postgres:5432/jobsdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=example
POSTGRES_DB=jobsdb
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Message broker (RabbitMQ)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Embedding configuration
VECTOR_DIM=1536
EMBEDDING_PROVIDER=ollama  # or openai
OLLAMA_URL=http://localhost:11434
# If using OpenAI (leave empty if not used)
OPENAI_API_KEY=

# Service ports (local docker-compose mapping)
INGESTION_PORT=8001
RETRIEVAL_PORT=8002
GATEWAY_PORT=8000
